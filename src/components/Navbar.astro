// src/components/Navbar.astro
// Basic placeholder navbar
---

<nav
    class="sticky top-0 z-50 bg-ieee-blue shadow-[0_4px_12px_-4px_rgba(0,0,0,0.25)] shadow-inner text-white relative"
>
    <div
        class="absolute left-0 right-0 bottom-0 h-2 bg-gradient-to-b from-transparent to-[#4F6FA3] pointer-events-none"
    >
    </div>
    <div class="flex items-center justify-between px-8 py-4">
        <a href="/" class="flex items-center gap-3 group">
            <img
                src="/logo_notext.jpg"
                alt="IEEE CS Logo"
                class="h-12 w-12 rounded-full bg-white border border-gray-200 shadow"
            />
            <span
                class="text-2xl font-bold text-white group-hover:text-ieee-orange transition-colors drop-shadow"
            >
                IEEE Computer Society @ UCF
            </span>
        </a>
        <div class="flex gap-6 text-xl font-semibold">
            <a
                href="/about"
                class="px-5 py-2 rounded-full hover:text-ieee-orange hover:underline transition"
                >About</a
            >
            <a
                href="/events"
                class="px-5 py-2 rounded-full hover:text-ieee-orange hover:underline transition"
                >Events</a
            >
            <a
                href="/projects"
                class="px-5 py-2 rounded-full hover:text-ieee-orange hover:underline transition"
                >Projects</a
            >
            <a
                href="/join"
                class="bg-ieee-orange text-white px-5 py-2 rounded-full font-bold shadow border-2 border-ieee-orange transform transition-transform duration-200 hover:scale-105"
                >Get Involved</a
            >
        </div>
    </div>
</nav>
