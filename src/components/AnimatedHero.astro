---
import "/src/styles/hero.css";
---

<section
    class="hero w-full min-h-screen flex items-center justify-center bg-gradient-to-br from-ieee-blue to-ieee-orange text-black relative pb-16"
    style="background-size: 200% 200%; animation: gradientMove 8s ease-in-out infinite;"
>
    <div class="hero-content flex flex-col items-center text-center w-full">
        <img
            src="/IEEE-CS_LogoTM-orange.png"
            alt="IEEE CS Logo"
            class="max-h-48"
            style="width: auto; height: auto; max-width: 100%;"
        />

        <h1
            class="text-4xl md:text-6xl font-extrabold mb-4 mt-16 drop-shadow text-black"
        >
            Student Chapter at UCF
        </h1>
        <p class="text-2xl md:text-4xl max-w-3xl mb-12 text-black">
            Inspiring innovation, leadership, and community in computing at UCF.
        </p>
        <a
            id="learn-more-btn"
            href="/about"
            class="learn-more-btn relative inline-block px-12 py-5 text-2xl font-semibold text-white rounded-full overflow-hidden"
        >
            Learn More
        </a>
    </div>
    <!-- Simple crossfade gradient for clean transition -->
    <div
        class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-b from-transparent to-gray-50 pointer-events-none"
    >
    </div>

    <style>
        @keyframes gradientMove {
            0%,
            100% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
        }
    </style>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("learn-more-btn");
        if (btn) {
            btn.addEventListener("mouseenter", () => {
                btn.style.transform = "scale(1.08)";
                btn.style.boxShadow = "0 0 24px #fff, 0 0 32px #fff";
                btn.style.filter = "brightness(1.1)";
                btn.style.transition =
                    "transform 0.3s, box-shadow 0.3s, filter 0.3s";
            });
            btn.addEventListener("mouseleave", () => {
                btn.style.transform = "";
                btn.style.boxShadow = "";
                btn.style.filter = "";
                btn.style.transition =
                    "transform 0.3s, box-shadow 0.3s, filter 0.3s";
            });
        }
    });
</script>
